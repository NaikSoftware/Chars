<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical" >
	
    <ua.naiksoftware.chars.Panel
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/panel_background"/>

    <LinearLayout
        android:id="@+id/layoutMultiplayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/btnTwoRight"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/my_btn_selector"
            android:text="right/down" />
			
        <Button
            android:id="@+id/btnTwoLeft"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/my_btn_selector"
            android:text="left/up" />
    </LinearLayout>

    <ua.naiksoftware.chars.GameView
        android:id="@+id/gameField"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnLeft"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:background="@drawable/my_btn_selector"
            android:text="left/up" />
			
        <Button
            android:id="@+id/btnPause"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@drawable/my_btn_selector"
            android:paddingLeft="1px"
            android:paddingRight="1px"
            android:onClick="gamePause"/>

        <Button
            android:id="@+id/btnRight"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:background="@drawable/my_btn_selector"
            android:text="right/down" />
    </LinearLayout>

</LinearLayout>

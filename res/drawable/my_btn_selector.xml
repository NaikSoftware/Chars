<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<gradient
				android:angle="270"
				android:startColor="#552200"
				android:centerColor="#555533"
				android:endColor="#ccaa00"/>
			<corners android:radius="7dp"/>
			<stroke android:color="#cc0000" android:width="1px"/>
			<padding android:left="13dp" android:top="13dp" android:right="13dp" android:bottom="13dp"/>
		</shape>
	</item>
	<item>
		<shape>
			<gradient
				android:angle="270"
				android:startColor="#ffcc00"
				android:centerColor="#666633"
				android:endColor="#330000"/>
			<corners android:radius="7dp"/>
			<stroke android:color="#cc0000" android:width="1px"/>
			<padding android:left="13dp" android:top="13dp" android:right="13dp" android:bottom="13dp"/>
		</shape>
	</item>
</selector>
